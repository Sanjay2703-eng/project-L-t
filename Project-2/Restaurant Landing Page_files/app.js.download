                Processing Payment...
            </div>
        `;
        submitBtn.disabled = true;
        
        // Simulate payment processing
        setTimeout(() => {
            const orderNumber = Math.floor(Math.random() * 900000) + 100000;
            this.showOrderConfirmation(orderNumber, amount);
        }, 2000);
    }
    
